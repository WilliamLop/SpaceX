---
import CardLaunch from "./CardLaunch.astro";
import { getLatestLaunches } from "../services/space";

const launches = await getLatestLaunches()
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 py-12">
    {launches.map(
        ({ id, links, details, flight_number: flight_number, success }) => (
        <CardLaunch 
            id = {id}
            img = {links.patch.small}
            details = {details}
            flightNumber= {flight_number}
            success ={success}

        />
    ))}
</div>